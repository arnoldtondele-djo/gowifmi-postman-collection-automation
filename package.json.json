{
  "name": "gowifmi-postman-collection-automation",
  "version": "1.0.0",
  "description": "Automated testing suite for Gowifmi API using Postman collections and Newman",
  "main": "index.js",
  "scripts": {
    "test": "newman run postman/collections/gowifmi-api.postman_collection.json --environment postman/environments/development.postman_environment.json",
    "test:prod": "newman run postman/collections/gowifmi-api.postman_collection.json --environment postman/environments/production.postman_environment.json",
    "test:functional": "newman run postman/collections/gowifmi-api.postman_collection.json --environment postman/environments/development.postman_environment.json --reporters cli,htmlextra --reporter-htmlextra-export reports/functional-report.html",
    "test:smoke": "newman run postman/collections/gowifmi-api.postman_collection.json --environment postman/environments/development.postman_environment.json --folder 'List all listings' --bail",
    "test:performance": "newman run postman/collections/gowifmi-api.postman_collection.json --environment postman/environments/development.postman_environment.json --iteration-count 50 --delay-request 100",
    "generate:report": "node scripts/generate-summary.js reports/",
    "analyze:performance": "node scripts/analyze-results.js",
    "validate:collection": "newman run postman/collections/gowifmi-api.postman_collection.json --dry-run",
    "setup": "npm install && mkdir -p reports scripts",
    "clean": "rm -rf reports/* node_modules"
  },
  "keywords": [
    "api-testing",
    "postman",
    "newman",
    "automation",
    "gowifmi",
    "ci-cd",
    "testing"
  ],
  "author": "Arnold Tondele <arnold.tondele@email.com>",
  "license": "MIT",
  "dependencies": {
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.23.0",
    "newman-reporter-slackmsg": "^1.1.0"
  },
  "devDependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.5",
    "yargs": "^17.7.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arnoldtondele-djo/gowifmi-postman-collection-automation.git"
  },
  "bugs": {
    "url": "https://github.com/arnoldtondele-djo/gowifmi-postman-collection-automation/issues"
  },
  "homepage": "https://github.com/arnoldtondele-djo/gowifmi-postman-collection-automation#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "newman": {
      "timeout": {
        "request": 30000,
        "script": 10000
      },
      "bail": false,
      "suppressExitCode": false,
      "insecure": false,
      "ignoreRedirects": false
    }
  }
}
